<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        android:id="@+id/guid_line_start"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guid_line_start"
        app:layout_constraintBottom_toBottomOf="@id/folder_start_tv"
        android:src="@drawable/ic_folder"
        android:id="@+id/folder_start_iv"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guid_line_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Folder"
        android:textSize="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:id="@+id/folder_start_tv"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/videos_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guid_line_start"
        app:layout_constraintBottom_toBottomOf="@id/videos_start_tv"
        android:src="@drawable/ic_folder"
        android:id="@+id/videos_start_iv"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/folder_start_tv"
        app:layout_constraintStart_toEndOf="@id/guid_line_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="All Videos"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:id="@+id/videos_start_tv"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/favourite_videos_start_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guid_line_start"
        app:layout_constraintBottom_toBottomOf="@id/favourite_videos_start_tv"
        android:src="@drawable/ic_folder"
        android:id="@+id/favourite_videos_start_iv"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/videos_start_tv"
        app:layout_constraintStart_toEndOf="@id/guid_line_start"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Favourite Videos"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:id="@+id/favourite_videos_start_tv"/>



</androidx.constraintlayout.widget.ConstraintLayout>